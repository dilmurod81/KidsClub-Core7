                            <!-- /.social-auth-links -->

                            <p class="mb-0">
                                <a style="color:blue" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                            </p>
                            <p class="mb-0">
                                <a style="color:blue" class="text-center" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register a new membership</a>
                            </p>
                            <p class="mb-0">
                                <a style="color:blue" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                            </p>
                        </div>
                        <!-- /.login-card-body -->
                    </div>
                </div>
            </body>

        </div>
    </div>

</div>

