                                                                        @Html.DisplayFor(modelItem => item.ShortDescription)
                                                                    </div>
                                                                </div>
                                                                
                                                                       @{
                                                                            string trimmed = item.FromId;
                                                                            item.FromId = trimmed.Replace(" ", "");
                                                                        }
