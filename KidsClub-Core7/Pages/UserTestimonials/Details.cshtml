                <div class="d-flex flex-row">
                    <section class="content">
                        <div class="container-fluid">
                            <div class="row mt-3">
                                <div class="col-md-12 offset-md-1">
                                    <div class="card card-secondary">
                                        <div class="card-header bg-light">
                                            <h4 class="card-title" style="width:350px">All Comments</h4>
                                        </div>
                                        <div class="list-group">
                                            @foreach (var item in Model.TblComments)
                                            {
                                                <div class="row">
                                                    <div class="col px-4" style="padding-top:5px">
                                                        <div style="width:350px">
                                                            <div>
                                                                <div class="row">
                                                                    <div class="col-sm-5">
                                                                        <b>Username</b>
                                                                    </div>
                                                                    <div class="col-sm-7">
                                                                        @Html.DisplayFor(modelItem => item.FromId)
                                                                    </div>
                                                                </div>
                                                                <div class="row">
                                                                    <div class="col-sm-5">
                                                                        <b>Opinion</b>
                                                                    </div>
                                                                    <div class="col-sm-7">
                                                                        @Html.DisplayFor(modelItem => item.Title)
                                                                    </div>
                                                                </div>
