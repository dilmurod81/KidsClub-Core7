                                                                    <div class="row">
                                                                        &nbsp;
                                                                    </div>
                                                                    <div class="row">
                                                                        <div class="col-sm-6">
                                                                        </div>
                                                                        <div class="col-sm-5">
                                                                                          
                                                                                        <a class="btn-sm btn-info" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                                                                                        &nbsp;&nbsp;

                                                                                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn-sm btn-secondary bg-danger">Delete</a>
                                                                                
