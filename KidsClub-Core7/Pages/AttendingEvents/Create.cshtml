                                                                                <div class="custom-file">
                                                                                    Please Upload Your ID&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input asp-for="Upload" type="file" class="custom-file-input" id="customFile" placeholder="Upload Picture">
                                                                                   <label class="custom-file-label" for="customFile">Choose file</label>
                                                                                  <span asp-validation-for="TblContent.Picture" class="text-danger"></span>
                                                                                </div>
                                                                            </div>*@
                                                                            <br />
                                                                            <div class="form-group">
                                                                                <input type="submit" value="Save" class="btn btn-primary float-left" />
                                                                                <a asp-page="/AttendingEvents/Index" class="btn btn-secondary bg-green">Go Back</a>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </section>
                                                    </form>
                                                </section>
                                                <br />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

