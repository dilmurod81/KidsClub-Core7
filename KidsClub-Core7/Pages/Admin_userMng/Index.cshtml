@model KidsClub.Pages.Admin_userMng.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout_admin.cshtml";
}


    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Users / Members</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Users</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
      
      <div class="card card-solid">
        <div class="card-body pb-0">
          <div class="row">
            @foreach (var item in Model.AspNetUser) {
            <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
              <div class="card bg-light d-flex flex-fill">
                <div class="card-header text-muted border-bottom-0">
                      @Html.DisplayFor(modelItem => item.NormalizedUserName)
                </div>
                <div class="card-body pt-0">
                  <div class="row">
                    <div class="col-7">
                      <h2 class="lead"><b>
                          @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                          </b>
                      </h2>
                      <p class="text-muted text-sm"><b>About: </b> Web Designer / UX / Graphic Artist / Coffee Lover </p>
                      <ul class="ml-4 mb-0 fa-ul text-muted">
                        <li class="small">
                            <span class="fa-li"><i class="fas fa-lg fa-building"></i></span> Date of Join: @Html.DisplayNameFor(model => model.AspNetUser[0].DateEntered)</li>
                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-book"></i></span> DOB: @Html.DisplayFor(modelItem => item.Dob)</li>
    <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> Phone#: @Html.DisplayFor(modelItem => item.PhoneNumber)</li>
                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-email"></i></span>Still Active? @Html.DisplayFor(modelItem => item.IsActive)</li>
                      </ul>
                    </div>
                    <div class="col-5 text-center">
                       <img src="./Pictures/@Html.DisplayFor(modelItem => item.Picture)" alt="user-avatar" class="img-circle img-fluid">
                    </div>
                  </div>
                </div>
                <div class="card-footer">
                  <div class="text-right">
                    @*<a href="#" class="btn btn-sm bg-teal">
                      <i class="fas fa-comments"></i>
                    </a>*@
                    <a asp-area="" asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                        <i class="fas fa-user"></i> Edit
                    </a>
                      <a asp-area="" asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm bg-red">
                      <i class="fas fa-user"></i> Delete                                         
                      </a>
                   
                  </div>
                </div>
              </div>
            </div>
            }



           
            
          </div>
        </div>
        
        <!-- /.card-body -->
        <div class="card-footer">
            <button class="btn bg-yellow float-right" style="margin-right: 10px">
                <a asp-page="./Create">Create New User</a>
            </button>
          @*<nav aria-label="Contacts Page Navigation">
            <ul class="pagination justify-content-center m-0">
              <li class="page-item active"><a class="page-link" href="#">1</a></li>
              <li class="page-item"><a class="page-link" href="#">2</a></li>
