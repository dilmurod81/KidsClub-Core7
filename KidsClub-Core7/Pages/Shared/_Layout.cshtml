                                    <ul class="u-nav u-unstyled" style="padding:10px;">
                                        <li class="u-nav-item" style="padding-bottom:10px;">
                                            <a class="u-button-style u-nav-link" asp-area="" asp-page="/Gallery/Games"><img src="~/Pictures/xBox.svg" class="icon-register" />Games</a>
                                        </li>
                                        <li class="u-nav-item" style="padding-bottom:10px;">
                                            <a class="u-button-style u-nav-link" asp-area="" asp-page="/Gallery/Video"><img src="~/Images/video-player.png" class="icon-register" />Videos</a>
                                        </li>
                                        <li class="u-nav-item">
                                            <a class="u-button-style u-nav-link" asp-area="" asp-page="/Gallery/Pictures"><img src="~/Images/picture.png" class="icon-register" />Pictures</a>
                                        </li>
                                    </ul>
