@page
@model KidsClub.Pages.Messages.Index1Model
@{
}
<h4>Your Messages</h4>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                From
            </th>
            <th>
                Sender's Name
            </th>
            <th>
                Subject
            </th>
            <th>
                Message
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TblContent)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FromId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShortDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LongDescription)
                </td>

                <td>
                    <a asp-page="./Details" asp-route-id="@item.Id">Reply</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
