    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<br />
<h4>Are you sure you want to delete this?</h4>
<div>
   
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            From
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TblContent.FromId)
        </dd>
        <dt class="col-sm-2">
            Sender's Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TblContent.Title)
        </dd>
        <dt class="col-sm-2">
           Subject
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TblContent.ShortDescription)
        </dd>
        <dt class="col-sm-2">
            Message
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TblContent.LongDescription)
        </dd>
        
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="TblContent.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index1">Back to List</a>
    </form>
</div>
