@page
@model KidsClub.Pages.Gallery.PicturesModel
@{

    <div class="container">
                <div class="d-flex flex-row">
                    <div class="col-md-2 me-3">
                        <div class="card-header">
                            Categories
                        </div>
                         <br>
                        <div class="btn-group-vertical">
                            <button type="button" class="btn btn-light">Nature Pictures</button>
                            <br>
                            <button type="button" class="btn btn-light">Family Pictures</button>
                            <br>
                            <button type="button" class="btn btn-light">Animal Pictures</button>
                            <br>
                            <button type="button" class="btn btn-light">Funny Pictures</button>
                            <br>
                            <button type="button" class="btn btn-light">Activity Pictures</button>
                        </div>
                    </div>
                    <div class="col-md-10 justify-content-center">
                        <div class="card-header">
                            Pictures Gallery
                        </div>
                        <br> 
                        <div class="card-group">
                            @foreach (var item in Model.TblContent)
                    {
                            <div class=" col-md-4">
                                <img class="card-img-top" style="padding:8px; height: 230px" src="/Pictures/@Html.DisplayFor(modelItem => item.Picture)" alt="Card image cap">
            
                                <div class="card-body">
                                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                                    <p class="card-text">@Html.DisplayFor(modelItem => item.ShortDescription)</p>
                                    <p class="card-text"><small class="text-muted">@Html.DisplayFor(modelItem => item.DateUpdated)</small></p>
                                </div>
                            </div>
                    }
                </div>

                    </div>
                </div>
    </div>    

}
